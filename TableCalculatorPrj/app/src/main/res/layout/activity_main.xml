<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TableRow>
        <EditText
            android:id="@+id/et1"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:hint="1번숫자" />
    </TableRow>
    <TableRow>
        <EditText
            android:id="@+id/et2"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:hint="2번숫자" />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/num0"
            android:layout_weight="6"
            android:text="0" />
        <Button
            android:id="@+id/num1"
            android:layout_weight="1"
            android:text="1"/>
        <Button
            android:id="@+id/num2"
            android:layout_weight="1"
            android:text="2"/>
        <Button
            android:id="@+id/num3"
            android:layout_weight="1"
            android:text="3"/>
        <Button
            android:id="@+id/num4"
            android:layout_weight="1"
            android:text="4"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/num5"
            android:layout_weight="6"
            android:text="5"/>
        <Button
            android:id="@+id/num6"
            android:layout_weight="1"
            android:text="6"/>
        <Button
            android:id="@+id/num7"
            android:layout_weight="1"
            android:text="7"/>
        <Button
            android:id="@+id/num8"
            android:layout_weight="1"
            android:text="8"/>
        <Button
            android:id="@+id/num9"
            android:layout_weight="1"
            android:text="9"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_weight="1"
            android:text="+"
            android:id="@+id/key_plu"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_weight="1"
            android:text="-"
            android:id="@+id/key_min"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_weight="1"
            android:text="*"
            android:id="@+id/key_mul"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_weight="1"
            android:text="/"
            android:id="@+id/key_div"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="계산결과 : "
            android:textSize="30dp"/>
        <TextView
            android:layout_weight="2"
            android:id="@+id/result"
            android:textSize="30dp"/>
    </TableRow>
</TableLayout>